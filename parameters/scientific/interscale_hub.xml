<?xml version="1.0" encoding="UTF-8" ?>
<parameters>
        <title>Interscale-HUB Scientific Parameters</title>
        <description>Scientific Parameters for the Interscale-HUB </description>

        <!-- Common NEST & TVB parameters -->
        <!-- buffer size factor -->
        <max_events datatype="int">1000000</max_events>
        <time_syncronization datatype="float">1.2</time_syncronization>
        <!-- resolution -->
        <dt datatype="float">0.1</dt>
        <nb_neurons datatype="int">10000</nb_neurons>
        <!-- rate of poisson generator ( due property of poisson process) -->
        <nb_brain_synapses datatype="int">1</nb_brain_synapses>

        <!-- Specific NEST parameters -->
        <!-- 3 doubles per event -->
        <nest_buffer_size_factor datatype="int">3</nest_buffer_size_factor>

        <!-- Specific TVB parameters -->
        <!-- 2 doubles: [start_time,end_time] of simulation step -->
        <tvb_buffer_size_factor datatype="int">2</tvb_buffer_size_factor>


</parameters>
